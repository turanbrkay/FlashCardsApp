<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flashCards.Views.addingWord">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="EnglishName"
                   x:Name="word"
                   TextTransform="Uppercase"/>
            <Entry Placeholder="TurkishName"
                   x:Name="mean"/>
            <Button Text="Save"
                    Clicked="addingButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>